<%= form_for [@event, subscription] do |f| %>
    <%= render partial: 'partials/form_errors', locals: {model: subscription} %>

    <% unless user_signed_in? %>
        <div class="mb-3">
          <%= f.label :user_name, class: 'form-lable mb-1' %>
          <%= f.text_field :user_name, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :user_email, class: 'form-lable mb-1' %>
          <%= f.text_field :user_email, class: 'form-control' %>
        </div>
    <% end %>

    <div class="actions">
      <%= f.submit t('forms.subscriptions.subscribe'), class: 'btn btn-primary' %>
    </div>
<% end %>
