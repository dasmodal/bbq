<% if user.errors.any? %>
  <div id="error_explanation"
    class="alert alert-warning d-flex alert-dismissible fade show" role="alert">
    <div>
      <h3><%= I18n.t(:form_errors, count: user.errors.count) %> при редактирование профиля:</h3>
      <ul class="mb-0">
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
    <div>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% end %>
