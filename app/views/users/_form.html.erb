<div class="row mb-4">
  <div class="col">
    <%= form_with(model: user, html: {multipart: true}) do |form| %>
      <%= render 'error_messages', user: user %>

      <div class="mb-3">
        <%= form.label :name, class: 'form-lable' %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= form.label :email, class: 'form-lable' %>
        <%= form.email_field :email, class: 'form-control' %>
      </div>
      <div class="actions">
        <%= form.submit class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>