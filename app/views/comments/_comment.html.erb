<div class="bg-light rounded my-3">
  <div class="row">
    <div class="col">
      <% if comment.user.present? %>
        <%= render partial: 'users/user', object: comment.user %>
      <% else %>
        <em><strong><%= comment.user_name %></strong></em>
      <% end %>
    </div>
    <div class="col-2 text-end">
      <em><%= l comment.created_at, format: :short %></em>
    </div>
  </div>
  <div class="row">
    <div class="mt-2 text-break">
      <%= comment.body %>
    </div>
  </div>
  <% if current_user_can_edit?(comment) %>
    <div class="row text-end">
      <%= link_to bootstrap_icon('trash', fill: 'red'), event_comment_path(comment.event, comment),
        method: :delete, data: { confirm: t('.destroy_confirm') } %>
    </div>
  <% end %>
</div>
